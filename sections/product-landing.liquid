{{ 'section-product-landing.css' | asset_url | stylesheet_tag }}

<div class="product-landing">
  {%- comment -%} ===== HERO SECTION ===== {%- endcomment -%}
  <section class="pl-hero">
    <div class="pl-container">
      <div class="pl-hero__grid">
        <div class="pl-hero__content">
          {%- comment -%}
            <div class="pl-hero__badge pl-float">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87L18.18 22 12 18.56 5.82 22 7 14.14l-5-4.87 6.91-1.01L12 2z"/></svg>
              {{ section.settings.hero_badge }}
            </div>
          {%- endcomment -%}

          <h1 class="pl-hero__title">{{ section.settings.hero_title }}</h1>

          <p class="pl-hero__subtitle">{{ section.settings.hero_subtitle }}</p>

          <div class="pl-hero__price-row">
            <span class="pl-hero__price">{{ product.price | money }}</span>
            {%- if section.settings.hero_price_note != blank -%}
              <span class="pl-hero__price-note">{{ section.settings.hero_price_note }}</span>
            {%- endif -%}
          </div>

          <div class="pl-hero__actions">
            <modal-opener data-modal="#PlPersonalizeModal">
              <button type="button" class="pl-btn pl-btn--lg" id="pl-modal-open-btn">
                <span>{{ section.settings.hero_cta_text }}</span>
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </button>
            </modal-opener>
          </div>

          <div class="pl-hero__trust">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
            <span>{{ section.settings.hero_trust_text }}</span>
          </div>
        </div>

        <div class="pl-hero__media">
          <div class="pl-hero__media-wrapper">
            {%- assign hero_media = product.media[0] -%}
            {%- if hero_media -%}
              {%- if hero_media.media_type == 'video' or hero_media.media_type == 'external_video' -%}
                {{ hero_media | media_tag: autoplay: false, controls: true }}
              {%- else -%}
                {{
                  hero_media
                  | image_url: width: 800
                  | image_tag: loading: 'eager', widths: '400, 600, 800', sizes: '(min-width: 750px) 50vw, 100vw'
                }}
              {%- endif -%}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}

            {%- comment -%} Fake player poster overlay {%- endcomment -%}
            <div class="pl-video-poster" data-video-poster>
              <img
                src="{{ 'main-characters.jpeg' | asset_url }}"
                alt="{{ product.title }}"
                loading="eager"
                width="360"
                height="640"
              >
              <button class="pl-video-poster__play" aria-label="Reproduzir v√≠deo">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="5,3 19,12 5,21"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {%- comment -%} ===== BENEFITS BAR ===== {%- endcomment -%}
  <section class="pl-benefits-bar">
    <div class="pl-container">
      <div class="pl-benefits-bar__grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'benefit' -%}
            <div class="pl-benefit-item" {{ block.shopify_attributes }}>
              <div class="pl-benefit-item__icon pl-benefit-item__icon--{{ block.settings.color }}">
                {{ block.settings.icon }}
              </div>
              <div class="pl-benefit-item__text">
                <h4>{{ block.settings.title }}</h4>
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>

  {%- comment -%} ===== HOW IT WORKS ===== {%- endcomment -%}
  <section class="pl-how-it-works">
    <div class="pl-container pl-text-center">
      <span class="pl-section-label">{{ section.settings.steps_label }}</span>
      <h2 class="pl-section-title">{{ section.settings.steps_title }}</h2>
      <p class="pl-section-subtitle">{{ section.settings.steps_subtitle }}</p>

      <div class="pl-steps">
        <div class="pl-steps__connector"></div>
        {%- assign step_count = 0 -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'step' -%}
            {%- assign step_count = step_count | plus: 1 -%}
            <div class="pl-step" {{ block.shopify_attributes }}>
              <span class="pl-step__number">{{ step_count }}</span>
              <span class="pl-step__icon">{{ block.settings.icon }}</span>
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.text }}</p>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>

  {%- comment -%} ===== VIDEO PREVIEW ===== {%- endcomment -%}
  <section class="pl-preview">
    <div class="pl-container pl-text-center">
      <span class="pl-section-label">{{ section.settings.preview_label }}</span>
      <h2 class="pl-section-title">{{ section.settings.preview_title }}</h2>

      <div class="pl-preview__wrapper">
        <div class="pl-preview__frame">
          {%- assign preview_media = product.media[1] -%}
          {%- if preview_media -%}
            {%- if preview_media.media_type == 'video' or preview_media.media_type == 'external_video' -%}
              {{ preview_media | media_tag: autoplay: false, controls: true }}
            {%- else -%}
              {{
                preview_media
                | image_url: width: 900
                | image_tag: loading: 'lazy', widths: '400, 600, 900', sizes: '(min-width: 750px) 720px, 100vw'
              }}
            {%- endif -%}
          {%- else -%}
            {{ 'product-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}

          {%- comment -%} Fake player poster overlay {%- endcomment -%}
          <div class="pl-video-poster" data-video-poster>
            <img
              src="{{ 'main-characters.jpeg' | asset_url }}"
              alt="{{ product.title }}"
              loading="lazy"
              width="360"
              height="640"
            >
            <button class="pl-video-poster__play" aria-label="Reproduzir v√≠deo">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="5,3 19,12 5,21"/>
              </svg>
            </button>
          </div>
        </div>
        <p class="pl-preview__caption">{{ section.settings.preview_caption }}</p>
      </div>
    </div>
  </section>

  {%- comment -%} ===== TESTIMONIALS ===== {%- endcomment -%}
  <section class="pl-testimonials">
    <div class="pl-container pl-text-center">
      <span class="pl-section-label">{{ section.settings.testimonials_label }}</span>
      <h2 class="pl-section-title">{{ section.settings.testimonials_title }}</h2>

      <div class="pl-testimonials__grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'testimonial' -%}
            <div class="pl-testimonial" {{ block.shopify_attributes }}>
              <div class="pl-testimonial__stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</div>
              <p class="pl-testimonial__text">"{{ block.settings.text }}"</p>
              <div class="pl-testimonial__author">
                <div class="pl-testimonial__avatar">{{ block.settings.name | slice: 0 }}</div>
                <div>
                  <div class="pl-testimonial__name">{{ block.settings.name }}</div>
                  <div class="pl-testimonial__role">{{ block.settings.role }}</div>
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>

  {%- comment -%} ===== FAQ ===== {%- endcomment -%}
  <section class="pl-faq">
    <div class="pl-container pl-text-center">
      <span class="pl-section-label">{{ section.settings.faq_label }}</span>
      <h2 class="pl-section-title">{{ section.settings.faq_title }}</h2>

      <div class="pl-faq__list">
        {%- for block in section.blocks -%}
          {%- if block.type == 'faq' -%}
            <details class="pl-faq-item" {{ block.shopify_attributes }}>
              <summary class="pl-faq-item__question">
                {{ block.settings.question }}
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                >
                  <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
                </svg>
              </summary>
              <div class="pl-faq-item__answer">
                <p>{{ block.settings.answer }}</p>
              </div>
            </details>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>

  {%- comment -%} ===== URGENCY / FINAL CTA ===== {%- endcomment -%}
  <section class="pl-urgency">
    <div class="pl-container">
      <span class="pl-section-label">{{ section.settings.urgency_label }}</span>
      <h2 class="pl-section-title">{{ section.settings.urgency_title }}</h2>
      <p class="pl-urgency__subtitle">{{ section.settings.urgency_text }}</p>

      <div class="pl-urgency__countdown pl-pulse">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
        </svg>
        {{ section.settings.urgency_countdown_text }}
      </div>

      {%- form 'product', product, id: 'pl-form-urgency' -%}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <input type="hidden" name="properties[Nome da Crian√ßa]" id="pl-urgency-name" value="">
        <input type="hidden" name="properties[Sabor Favorito]" id="pl-urgency-flavor" value="">
        <input type="hidden" name="properties[WhatsApp]" id="pl-urgency-whatsapp" value="">
        <button
          type="submit"
          class="pl-btn pl-btn--lg"
          {% unless product.selected_or_first_available_variant.available %}
            disabled
          {% endunless %}
        >
          <span>{{ section.settings.urgency_cta_text }}</span>
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
          >
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </button>
      {%- endform -%}

      <p class="pl-urgency__guarantee">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
        {{ section.settings.urgency_guarantee }}
      </p>
    </div>
  </section>

  {%- comment -%} ===== PERSONALIZE MODAL ===== {%- endcomment -%}
  <pl-personalize-modal id="PlPersonalizeModal" class="pl-modal">
    <div class="pl-modal__content" role="dialog" aria-modal="true" aria-label="Personalizar V√≠deo">
      <button id="ModalClose-PlPersonalize" class="pl-modal__close" aria-label="Fechar">
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
          stroke-linecap="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>

      {%- form 'product', product, id: 'pl-form-hero' -%}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

        <div class="pl-personalize" id="pl-personalize">
          <div class="pl-personalize__header">
            <span class="pl-personalize__icon">üé®</span>
            <h3 class="pl-personalize__title">Personalize Seu V√≠deo ‚ú®</h3>
            <p class="pl-personalize__subtitle">Preencha os dados para criar a magia!</p>
          </div>

          <div class="pl-personalize__fields">
            <div class="pl-personalize__field">
              <label for="pl-child-name"> üßí Nome da Crian√ßa <abbr title="obrigat√≥rio">*</abbr> </label>
              <input
                type="text"
                id="pl-child-name"
                name="properties[Nome da Crian√ßa]"
                placeholder="Ex: Sofia"
                required
                autocomplete="off"
                maxlength="40"
              >
            </div>

            <div class="pl-personalize__field">
              <label for="pl-flavor"> üç´ Sabor Favorito do Ovo <abbr title="obrigat√≥rio">*</abbr> </label>
              <input
                type="text"
                id="pl-flavor"
                name="properties[Sabor Favorito]"
                placeholder="Ex: Chocolate ao Leite"
                required
                autocomplete="off"
                maxlength="50"
              >
            </div>

            <div class="pl-personalize__field">
              <label for="pl-whatsapp"> üì± WhatsApp para Entrega <abbr title="obrigat√≥rio">*</abbr> </label>
              <input
                type="tel"
                id="pl-whatsapp"
                name="properties[WhatsApp]"
                placeholder="(11) 99999-9999"
                required
                autocomplete="tel"
                maxlength="20"
                pattern="\(?\d{2}\)?\s?\d{4,5}-?\d{4}"
              >
            </div>
          </div>
        </div>

        <button
          type="submit"
          class="pl-btn pl-btn--lg"
          {% unless product.selected_or_first_available_variant.available %}
            disabled
          {% endunless %}
        >
          <span>{{ section.settings.hero_cta_text }}</span>
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
          >
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </button>
      {%- endform -%}
    </div>
  </pl-personalize-modal>
</div>

