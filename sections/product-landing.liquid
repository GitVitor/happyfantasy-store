                      required
                      autocomplete="tel"
                      maxlength="20"
                      pattern="\(?\d{2}\)?\s?\d{4,5}-?\d{4}"
                    >
                  </div>
                </div>
              </div>

              <button type="submit" class="pl-btn pl-btn--lg" {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
                <span>{{ section.settings.hero_cta_text }}</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
              </button>
            {%- endform -%}
          </div>

          <div class="pl-hero__trust">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
