<script>
  (function () {
    /* WhatsApp mask: (XX) XXXXX-XXXX */
    const whatsInput = document.getElementById('pl-whatsapp');
    if (whatsInput) {
      whatsInput.addEventListener('input', function (e) {
        let v = e.target.value.replace(/\D/g, '').slice(0, 11);
        if (v.length > 6) {
          v = '(' + v.slice(0, 2) + ') ' + v.slice(2, 7) + '-' + v.slice(7);
        } else if (v.length > 2) {
          v = '(' + v.slice(0, 2) + ') ' + v.slice(2);
        } else if (v.length > 0) {
          v = '(' + v;
        }
        e.target.value = v;
      });
    }

    /* Sync hero fields ‚Üí urgency hidden inputs */
    const nameInput = document.getElementById('pl-child-name');
    const flavorInput = document.getElementById('pl-flavor');
    const urgName = document.getElementById('pl-urgency-name');
    const urgFlavor = document.getElementById('pl-urgency-flavor');
    const urgWhatsapp = document.getElementById('pl-urgency-whatsapp');

    function syncFields() {
      if (urgName) urgName.value = nameInput ? nameInput.value : '';
      if (urgFlavor) urgFlavor.value = flavorInput ? flavorInput.value : '';
      if (urgWhatsapp) urgWhatsapp.value = whatsInput ? whatsInput.value : '';
    }

    if (nameInput) nameInput.addEventListener('input', syncFields);
    if (flavorInput) flavorInput.addEventListener('input', syncFields);
    if (whatsInput) whatsInput.addEventListener('input', syncFields);

    /* Validate urgency form: open modal if fields empty */
    const urgForm = document.getElementById('pl-form-urgency');
    if (urgForm) {
      const urgSubmitBtn = urgForm.querySelector('button[type="submit"]');
      urgForm.addEventListener('submit', function (e) {
        if (!nameInput.value || !flavorInput.value || !whatsInput.value) {
          e.preventDefault();
          const modal = document.querySelector('#PlPersonalizeModal');
          if (modal) modal.show(urgSubmitBtn);
        } else {
          syncFields();
        }
      });
    }
  })();

  /* ===== PlPersonalizeModal: extends ModalDialog (defined in global.js) ===== */
  document.addEventListener('DOMContentLoaded', function () {
    class PlPersonalizeModal extends ModalDialog {
      constructor() {
        super();
      }

      show(opener) {
        super.show(opener);
        /* Phase 6: Focus first non-filled required field (deferred to allow CSS visibility transition to apply) */
        setTimeout(() => {
          const firstEmpty = [...this.querySelectorAll('input[required]')].find(function (input) {
            return !input.value.trim();
          });
          if (firstEmpty) {
            firstEmpty.focus();
          }
        }, 50);
      }
    }
    customElements.define('pl-personalize-modal', PlPersonalizeModal);
  });

  /* ---------- Fake video poster: click to reveal & play real video ---------- */
  (function () {
